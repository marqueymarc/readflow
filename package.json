{
  "name": "readwise-cleanup",
  "version": "3.2.18",
  "description": "Bulk delete/archive old Readwise Reader items with restoration support",
  "scripts": {
    "test:bootstrap": "node scripts/ensure-birpc-entry.mjs",
    "check:ui": "node check-ui-script.mjs",
    "check:browser": "node check-ui-browser-smoke.mjs",
    "test": "npm run test:bootstrap && vitest run",
    "test:watch": "vitest",
    "deploy": "npm run check:ui && npm run check:browser && wrangler deploy"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.5.0",
    "@cloudflare/workers-types": "^4.20241022.0",
    "vitest": "2.1.8",
    "wrangler": "^4.65.0"
  }
}
